<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share Your Refer Code with Your Friends"
        android:textSize="15sp"
        android:textColor="#82B1F9"
        android:textStyle="bold"
        android:fontFamily="@font/regular"
        android:gravity="center"
        android:layout_gravity="center"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="12dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingHorizontal="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/dotted_border"
            android:clipToOutline="true"
            android:paddingEnd="80dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxxxxxxx"
                android:textSize="18sp"
                android:textColor="#3581F6"
                android:textStyle="bold"
                android:fontFamily="@font/extrabold"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"/>
        </RelativeLayout>

        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginEnd="6dp"
            android:text="Share >"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:fontFamily="@font/extrabold"
            android:backgroundTint="#3581F6"
            android:stateListAnimator="@null"
            android:layout_gravity="end|center_vertical"
            android:translationX="10dp"/>
    </FrameLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You will receive your Rewards once your friend\nenters your Refer Code"
        android:textSize="15sp"
        android:textColor="#666666"
        android:textStyle="bold"
        android:fontFamily="@font/regular"
        android:gravity="center"
        android:layout_gravity="center"
        android:textAlignment="center"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share Via"
        android:textSize="15sp"
        android:textColor="#82B1F9"
        android:textStyle="bold"
        android:fontFamily="@font/regular"
        android:gravity="center"
        android:layout_gravity="center"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/image1"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/image2"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/image3"/>
    </LinearLayout>

</LinearLayout>
