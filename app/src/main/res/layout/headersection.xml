<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp">

    <ImageView
        android:id="@+id/cashjoy_logo"
        android:layout_width="131dp"
        android:layout_height="30dp"
        android:src="@drawable/cashjoy"
        android:scaleType="fitCenter"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:id="@+id/balance_card"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:layout_below="@id/cashjoy_logo"
        android:layout_marginTop="24dp"
        android:layout_centerVertical="true"
        android:background="@drawable/balance_card_bg"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:clipToOutline="true">

        <TextView
            android:id="@+id/my_balance_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Balance"
            android:textSize="12sp"
            android:textColor="#82B1F9"
            android:fontFamily="@font/regular"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" />

        <ImageView
            android:id="@+id/coin_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/bolt"
            android:layout_below="@id/my_balance_text"
            android:layout_alignParentStart="true"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/balance_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="499"
            android:textSize="22sp"
            android:textColor="#3581F6"
            android:fontFamily="@font/bold"
            android:layout_toEndOf="@id/coin_icon"
            android:layout_marginTop="22dp"
            android:layout_marginStart="4dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/redeem_button"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@id/cashjoy_logo"
        android:layout_marginTop="24dp"
        android:layout_toEndOf="@id/balance_card"
        android:layout_alignBottom="@id/balance_card"
        android:background="@drawable/redeem_button_bg"
        android:clipToOutline="true"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginStart="-30dp">

        <TextView
            android:id="@+id/redeem_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Redeem"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/bold"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/redeem_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/bold"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/redeem_text"
            android:layout_marginStart="6dp" />
    </RelativeLayout>

</RelativeLayout>
